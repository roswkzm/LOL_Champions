<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ChipTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">2dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextStyle.Keyword" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextStyle.SkinName" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextStyle.Title.Spell" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">2dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextStyle.Description" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/white_little_trans</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="ChampionDetail_title" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>